<script>
    function showHome() {
        document.getElementById('home-page').style.display = 'block';
        document.getElementById('bio-page').style.display = 'none';
        document.getElementById('titles-page').style.display = 'none';
        
        document.getElementById('btn1').className = 'active-button';
        document.getElementById('btn2').className = '';
        document.getElementById('btn3').className = '';
    }

    function showBio() {
        document.getElementById('home-page').style.display = 'none';
        document.getElementById('bio-page').style.display = 'block';
        document.getElementById('titles-page').style.display = 'none';
        
        document.getElementById('btn1').className = '';
        document.getElementById('btn2').className = 'active-button';
        document.getElementById('btn3').className = '';
    }

    function showTitles() {
        document.getElementById('home-page').style.display = 'none';
        document.getElementById('bio-page').style.display = 'none';
        document.getElementById('titles-page').style.display = 'block';
        
        document.getElementById('btn1').className = '';
        document.getElementById('btn2').className = '';
        document.getElementById('btn3').className = 'active-button';
    }

    function goToHome() {
        showHome();
    }
</script>

